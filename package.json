{
  "name": "agent-team-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Multi-Agent System for Software Development Automation - Enterprise SDLC Platform",
  "author": "Agent Team Contributors",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=9.12.3"
  },
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "bootstrap": "bash ./scripts/pnpm-bootstrap.sh",
    "ci:install": "pnpm install --frozen-lockfile",
    "ci:build": "pnpm -w run build",
    "ci:lint": "pnpm -w run lint",
    "ci:typecheck": "pnpm -w run typecheck",
    "ci:test": "pnpm -w run test",
    "dev": "tsx apps/server/src/main.ts",
    "build": "tsc -p .",
    "start": "node dist/apps/server/src/main.js",
    "test": "vitest run --coverage",
    "test:watch": "vitest watch --coverage",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json",
    "test:coverage": "vitest run --coverage --reporter=verbose --reporter=json",
    "test:staged": "vitest run --coverage --run --changed",
    "test:debug": "node --inspect-brk node_modules/.bin/vitest --runInBand",
    "enforce:coverage": "tsx scripts/enforce-coverage.ts",
    "enforce:all-files-tested": "tsx scripts/find-untested-files.ts",
    "enforce:strict": "pnpm run test:coverage && pnpm run enforce:coverage && pnpm run enforce:all-files-tested",
    "coverage:summary": "tsx scripts/coverage-summary.ts",
    "coverage:open": "open coverage/lcov-report/index.html",
    "pre-commit": "pnpm run typecheck && pnpm run lint && pnpm run enforce:strict",
    "pre-push": "pnpm run test:ci",
    "verify:all": "pnpm run typecheck && pnpm run lint && pnpm run test:ci && pnpm run enforce:coverage && pnpm run enforce:all-files-tested",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc -p . --noEmit",
    "typecheck": "tsc -p . --noEmit",
    "smoke": "tsx apps/ops/smoke.ts",
    "clean": "rm -rf dist coverage node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,json,md}\"",
    "demo:comm": "ts-node examples/comm-demo.ts",
    "web:dev": "pnpm --filter @agent-team/web dev",
    "web:build": "pnpm --filter @agent-team/web build",
    "web:start": "pnpm --filter @agent-team/web start",
    "web:test": "pnpm --filter @agent-team/web test",
    "web:e2e": "pnpm --filter @agent-team/web e2e"
  },
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "@vitest/coverage-v8": "^2.1.3",
    "@vitest/ui": "^2.1.3",
    "eslint": "^9.11.1",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "@agent-team/ai": "workspace:^0.2.0",
    "@agent-team/communication": "workspace:^0.1.0",
    "@agent-team/orchestration": "workspace:^0.2.0",
    "fastify": "^4.28.1",
    "node-fetch": "^3.3.2"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.6.3"
    }
  }
}
